<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinhasCompras.Views.ListaProduto"
             Title="Meus Produtos">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Somar" Clicked="ToolbarItem_Clicked_1"/>
        <ToolbarItem Text="Adicionar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout>
        <SearchBar x:Name="txt_search" 
                   Placeholder="Busca de Produtos" 
                   TextChanged="txt_search_TextChanged"/>
        <ListView x:Name="lst_produtos" ItemSelected="lst_produtos_ItemSelected">
            <ListView.Header>
                <Grid ColumnDefinitions="*, *, *, *, *">
                    <Label Grid.Row="0" Text="ID"/>
                    <Label Grid.Row="1" Text="Descrição"/>
                    <Label Grid.Row="2" Text="Preço"/>
                    <Label Grid.Row="3" Text="Qnt"/>
                    <Label Grid.Row="4" Text="Total"/>
                </Grid>   
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Remover" Clicked="MenuItem_Clicked"/>
                        </ViewCell.ContextActions>
                        <Grid ColumnDefinitions="*, *, *, *, *">
                            <Label Grid.Row="0" Text="{Binding ID}"/>
                            <Label Grid.Row="1" Text="{Binding Descrição}"/>
                            <Label Grid.Row="2" Text="{Binding Preço}"/>
                            <Label Grid.Row="3" Text="{Binding Qnt}"/>
                            <Label Grid.Row="4" Text="{Binding Total}"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>